<Window x:Class="WpfApp_DataBinding.DemoConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataBinding"
        mc:Ignorable="d"
        Title="DemoConvertWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToTextConverter x:Key="BoolToTextConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel 
           Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="300">
            <TextBlock Text="Data Binding Example: Converter" FontSize="24" Margin="10" HorizontalAlignment="Center"/>
            <!-- IsChecked from ConvertViewModel -->
            <TextBlock Text="{Binding IsChecked, Converter={StaticResource BoolToTextConverter}}" FontSize="24" Margin="10" HorizontalAlignment="Center"/>
            <CheckBox Content="Swich function: " IsChecked="{Binding IsChecked}" FontSize="24" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
