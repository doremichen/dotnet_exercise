<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Views="clr-namespace:MauiPuzzleHeroGame.Views"
             x:Class="MauiPuzzleHeroGame.Views.GamePage"
             Title="GamePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding ElapsedTimeDisplay}"
                 Priority="0"
                 Order="Primary" />
        <ToolbarItem Text="重玩"
                 Command="{Binding RestartGameCommand}"
                 Priority="1"
                 Order="Primary" />
        <ToolbarItem Text="設定"
                 Command="{Binding OpenSettingsCommand}"
                 Priority="2"
                 Order="Primary" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <!-- Game main screen -->
        <ScrollView>
            <Grid x:Name="PuzzleGrid"
                  Padding="10"
                  RowSpacing="2"
                  ColumnSpacing="2"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">
                <!-- GameViewModel Binding -->
                <CollectionView ItemsSource="{Binding PuzzlePieces}"
                                ItemsLayout="{Binding PuzzleLayout}">
                   
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="0" Margin="1" StrokeThickness="0">
                                <Image Source="{Binding ImagePart}" 
                                       Aspect="AspectFill" 
                                       HeightRequest="100" WidthRequest="100">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.PieceTappedCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>