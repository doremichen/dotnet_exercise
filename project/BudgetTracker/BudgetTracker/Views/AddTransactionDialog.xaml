<Window x:Class="BudgetTracker.Views.AddTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetTracker.Views"
        mc:Ignorable="d"
        Title="AddTransactionDialog" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 日期 -->
        <Label Content="Date：" Grid.Row="0"/>
        <DatePicker Grid.Row="0" Margin="60,0,0,0" SelectedDate="{Binding Date}" />

        <!-- 類別 -->
        <Label Content="Categories：" Grid.Row="1" />
        <ComboBox Grid.Row="1" Margin="60,0,0,0"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding Category}" />

        <!-- 描述 -->
        <Label Content="Description：" Grid.Row="2" />
        <TextBox Grid.Row="2" Margin="60,0,0,0" Text="{Binding Description}" />

        <!-- 金額 -->
        <Label Content="Amount：" Grid.Row="3" />
        <TextBox Grid.Row="3" Margin="60,0,0,0" Text="{Binding Amount}" />

        <!-- 類型 -->
        <Label Content="Type：" Grid.Row="4" />
        <ComboBox Grid.Row="4" Margin="60,0,0,0"
                  ItemsSource="{Binding TransactionTypes}"
                  SelectedItem="{Binding SelectedTransactionType}" />

        <!-- 按鈕 -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Confirm" Width="80" Margin="0,0,10,0"  IsDefault="True" Command="{Binding ConfirmCommand}" />
            <Button Content="Cancel" Width="80" IsCancel="True" />
        </StackPanel>

    </Grid>
</Window>
