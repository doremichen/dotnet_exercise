<UserControl x:Class="BeautyBookingApp.Views.BookingHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 標題 -->
            <RowDefinition Height="*"/>
            <!-- 預約列表 -->
            <RowDefinition Height="Auto"/>
            <!-- 回主畫面按鈕 -->
        </Grid.RowDefinitions>

        <TextBlock Text="我的預約紀錄"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <ListBox x:Name="BookingListBox"
         Grid.Row="1"
         Margin="0,0,0,10"
         SelectionMode="Extended"
         PreviewMouseLeftButtonDown="BookingListBox_MouseDown"
         PreviewMouseLeftButtonUp="BookingListBox_MouseUp">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock FontWeight="Bold" FontSize="14"
                           Text="{Binding DisplayTitle}" />
                        <TextBlock FontSize="12" Foreground="Gray"
                           Text="{Binding DisplayDetail}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="刪除預約"
            Height="35"
            Width="120"
            HorizontalAlignment="Left"
            Click="Delete_Click"
            Grid.Column="0"/>

            <Button Content="回主畫面"
            Height="35"
            Width="120"
            HorizontalAlignment="Right"
            Click="Back_Click"
            Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>

