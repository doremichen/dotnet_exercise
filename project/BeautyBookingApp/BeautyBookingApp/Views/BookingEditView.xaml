<UserControl x:Class="BeautyBookingApp.Views.BookingEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeautyBookingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="編輯預約" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="預約對象"/>
            <TextBox x:Name="txtClientName" Height="30"/>

            <TextBlock Text="日期"/>
            <DatePicker x:Name="datePicker" Height="30"/>

            <TextBlock Text="時間（HH:mm）"/>
            <TextBox x:Name="timeBox" Height="30"/>

            <Button Content="儲存修改"
                    Height="35"
                    Margin="0,10,0,0"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
