<Window x:Class="TimetableGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimetableGenerator"
        xmlns:vm="clr-namespace:TimetableGenerator.ViewModels"
        mc:Ignorable="d"
        Title="功課表產生器" Height="500" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="節次" Grid.Column="0" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="星期一" Grid.Column="1" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="星期二" Grid.Column="2" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="星期三" Grid.Column="3" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="星期四" Grid.Column="4" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="星期五" Grid.Column="5" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="第一節課" Grid.Row="0" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="第二節課" Grid.Row="1" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="第三節課" Grid.Row="2" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="第四節課" Grid.Row="3" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>

                <ItemsControl ItemsSource="{Binding MorningTimetable}" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="0" Grid.RowSpan="4">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid IsItemsHost="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Column" Value="{Binding Day}" />
                            <Setter Property="Grid.Row" Value="{Binding Period}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Subjects, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                      SelectedItem="{Binding Subject, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="6" BorderBrush="LightGray" BorderThickness="1">
            <TextBlock Text="午休" 
                       TextAlignment="Center" FontWeight="Bold" Margin="0,10" VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="第一節課" Grid.Row="0" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="第二節課" Grid.Row="1" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="第三節課" Grid.Row="2" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center"/>

                <ItemsControl ItemsSource="{Binding AfternoonTimetable}" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="0" Grid.RowSpan="3">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid IsItemsHost="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Column" Value="{Binding Day}" />
                            <Setter Property="Grid.Row" Value="{Binding Period}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Subjects, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                      SelectedItem="{Binding Subject, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="第幾週：" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="50" Text="{Binding ExportWeek, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <Button Content="產生 Excel 檔案"
                Padding="10,5"
                Command="{Binding ExportExcelCommand}" />
        </StackPanel>

    </Grid>
</Window>