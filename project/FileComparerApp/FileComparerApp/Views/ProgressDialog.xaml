<Window x:Class="FileComparerApp.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileComparerApp.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="300" Height="100"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="Gray" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="比對中，請稍候..." HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <ProgressBar IsIndeterminate="True" Height="10"/>
        </StackPanel>
    </Border>
</Window>
