<Window x:Class="FileComparerApp.Views.DiffViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileComparerApp.Views"
        mc:Ignorable="d"
        Title="內容差異檢視" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <!-- Column definition -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左邊（原始） -->
        <ListBox Grid.Column="0" ItemsSource="{Binding LeftDiffLines}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text, FallbackValue='[未綁定成功]'}" Background="{Binding Background, FallbackValue='[未綁定成功]'}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 右邊（修改後） -->
        <ListBox Grid.Column="1" ItemsSource="{Binding RightDiffLines}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text, FallbackValue='[未綁定成功]'}" Background="{Binding Background, FallbackValue='[未綁定成功]'}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
