<Window x:Class="WpfMultithreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMultithreadDemo"
        mc:Ignorable="d"
        Title="WPF multithreda demo" Height="450" Width="800">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <Button Name="btnStart" Content="Start Background Task" Height="40" Click="btnStart_Click" Margin="0,0,0,10"/>
        <ProgressBar Name="progressBar" Height="20" Minimum="0" Maximum="100"/>
        <TextBlock Name="txtStatus" Text="Status: Idle" Margin="0,10,0,0" FontSize="16" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
